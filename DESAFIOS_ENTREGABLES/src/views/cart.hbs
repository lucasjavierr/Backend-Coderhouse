<header>
  <h1>Component Hardware</h1>
  <nav class="navbar">
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/products">Products</a></li>
      <li><a href='/cart/6525b05f6d9f1c50835332d1'>Cart</a></li>
    </ul>
  </nav>
</header>

<h1>Pagina del carrito</h1>

<div class="productsContainer">
  {{#each products}}
    <div class="card_body">
      <picture class="card_image_container">
        <img src={{{this.productId.thumbnail}}} />
      </picture>
      <div class="card_info_container">
        <h3>{{this.productId.title}}</h3>
        <p>${{this.productId.price}}</p>
        <p>Cantidad: {{quantity}}</p>
      </div>
      <div class="card_button_container">
        <button class="delete-to-cart-button" data-product-id="{{this.productId._id}}">Eliminar del carrito</button>
      </div>
    </div>
  {{/each}}
</div>

<script src="/js/cart.js"></script>