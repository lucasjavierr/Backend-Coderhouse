<section class='form_container'>
  <div class='wrapper'>

    {{#if message}}
      <p style="color: rgb(0, 255, 0)">{{message}}</p>
    {{/if}}

    <form method="post" action="/api/sessions/login">
      <h1>Login</h1>

      <div class="input-box">
        <input type="email" name="email" placeholder="Correo electrónico" />
        <i class='bx bxs-user'></i>
      </div>
      <div class="input-box">
        <input type="password" name="password" placeholder="Contraseña" />
        <i class='bx bxs-lock-alt'></i>
      </div>

      <div class="remember-forgot">
        <a href="#">¿Olvidaste tu contraseña?</a>
      </div>

      <button type="submit" class="btn">Iniciar sesión</button>

      {{#if error}}
        <p class="error-login"><i class='bx bxs-error-circle'></i> {{error}}</p>
      {{/if}}

      <div class="register-link">
        <p>¿No tienes una cuenta? <a href="/signup">Regístrate</a></p>
      </div>
    </form>

    <div class="line"></div>

    <a href="/api/sessions/signup-github">
      <i class='bx bxl-github'></i>
      <button class="btn-login">Continuar con GitHub</button>
    </a>
  </div>
</section>

