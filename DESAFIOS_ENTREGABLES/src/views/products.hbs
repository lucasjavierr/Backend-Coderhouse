  <li><a href="/products?category=storage">Almacenamiento</a></li>
</ul>

<div class="productsContainer">
  {{#each payload}}
    <div class="card_body">
      <picture class="card_image_container">
        <img src={{{this.thumbnail}}} />
      </picture>
      <div class="card_info_container">
        <h3>{{this.title}}</h3>
        <p>${{this.price}}</p>
        <p>{{this.description}}</p>
      </div>
      <div class="card_button_container">
        <button class="add-to-cart-button" data-product-id="{{this._id}}">Agregar al carrito</button>
      </div>
    </div>
  {{/each}}
</div>

{{#if prevLink}}
  <a href="{{prevLink}}">Anterior</a>
{{/if}}

{{#if nextLink}}
  <a href="{{nextLink}}">Siguiente</a>
{{/if}}

<script src="/js/products.js"></script>
